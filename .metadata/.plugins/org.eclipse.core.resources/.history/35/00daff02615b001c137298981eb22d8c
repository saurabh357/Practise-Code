package HackerRank;

import java.util.*;

public class dayOfProgrammer {

	public static String dayOfProgrammer(int year) {
		int mainDay = 256;
		int total = 0;
		int add = 0;
		int[] arr = { 31, 30 };
		int i = 0;
		while (mainDay > total) {
			if (year % 4 == 0) {
				if (i == 7) {
					total += arr[i % arr.length];
				} else {
					int feb = 29;
					if (i == 1) {
						add = feb;
						total += add;
					} else {
						add = arr[i % arr.length];
						total += add;
					}
					i++;
				}
			}

//			else {
//				
//			}
		}
		String ans = String.valueOf(total);
		return ans;
	}

	public static void main(String[] args) {
		int year = 2016;
		System.out.println(dayOfProgrammer(year));
	}
}
