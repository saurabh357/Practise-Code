package HackerRank;

import java.util.*;

public class dayOfProgrammer {

	public static String dayOfProgrammer(int year) {
		int mainDay = 256;
		int total = 0;
		int add = 0;
		int[] arr = { 31, 30 };
		for(int i=0;i<8;i++){
			if (year % 4 == 0) {
				if (i == 7) {
					total += 31;
				} else {
					int feb = 29;
					if (i == 1) {
						add = feb;
						total += add;
					} else {
						add = arr[i % arr.length];
						total += add;
					}
				}
			}
			else {
					if (i == 7) {
						total += 31;
				} else {
						int feb1 = 28;
						if (i == 1) {
							add = feb1;
							total += add;
						} else {
							add = arr[i % arr.length];
							total += add;
						}
					}
			}
		}	
		String ans = String.valueOf(total);
		return ans;
	}
	public static void main(String[] args) {
		int year = 2017;
		System.out.println(dayOfProgrammer(year));
	}
}
